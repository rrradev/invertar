{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/api.tsbuildinfo",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../../packages/db"
    },
    {
      "path": "../../packages/auth"
    },
    {
      "path": "../../packages/types"
    }
  ]
}