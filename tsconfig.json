{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/db": [
        "packages/db"
      ],
      "@repo/auth/*": [
        "packages/auth/src/*"
      ],
      "@repo/auth": [
        "packages/auth/src"
      ],
      "@repo/types/*": [
        "packages/types/*"
      ],
      "@repo/types": [
        "packages/types"
      ],
      "@repo/api": [
        "apps/api"
      ],
      "@repo/web": [
        "apps/web"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "apps/web"
  ],
  "references": [
    {
      "path": "packages/db"
    },
    {
      "path": "packages/auth"
    },
    {
      "path": "packages/types"
    },
    {
      "path": "apps/api"
    }
  ]
}