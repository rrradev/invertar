{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@repo/db": [
        "packages/db"
      ],
      "@repo/auth/*": [
        "packages/auth/src/*"
      ],
      "@repo/types/*": [
        "packages/types/*"
      ]
    },
  },
  "include": [
    "packages/**/*",
    "tests/**/*",
    "tests/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "packages/db"
    },
    {
      "path": "packages/auth"
    },
    {
      "path": "packages/types"
    }
  ]
}