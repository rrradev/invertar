{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types/*": ["packages/types/*"],
      "@repo/db": ["packages/db/"],
      "@repo/auth/*": ["packages/auth/src/*"],
      "@repo/auth": ["packages/auth/src/"],
      "@repo/api": ["apps/api/src/"]
    }
  },
  "exclude": ["apps/web"]
}
