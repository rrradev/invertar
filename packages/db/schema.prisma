datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Organization {
  id        String    @id @default(cuid())
  name      String    @unique
  users     User[]
  folders   Folder[]
  labels    Label[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model User {
  id                String       @id @default(cuid())
  username          String
  email             String?
  hashedPassword    String?
  oneTimeAccessCode String?      @unique
  oneTimeAccessCodeExpiry DateTime?
  role              UserRole     @default(USER)
  organizationId    String
  organization      Organization @relation(fields: [organizationId], references: [id])
  refreshToken      String?

  // Back-relations for lastModifiedBy
  modifiedFolders   Folder[]     @relation("FolderLastModifiedBy")
  modifiedItems     Item[]       @relation("ItemLastModifiedBy")

  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@unique([organizationId, username])
  @@unique([organizationId, email])
}

enum UserRole {
  ADMIN
  USER
  SUPER_ADMIN
}

enum Unit {
  PCS     // pieces 
  KG      // kilograms
  G       // grams
  L       // liters
  ML      // milliliters
  M       // meters
  CM      // centimeters
  M2      // square meters
  M3      // cubic meters
}

model Folder {
  id               String   @id @default(cuid())
  name             String
  organizationId   String
  organization     Organization @relation(fields: [organizationId], references: [id])
  items            Item[]
  photos           Photo[]

  lastModifiedById String
  lastModifiedBy   User     @relation("FolderLastModifiedBy", fields: [lastModifiedById], references: [id])

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Label {
  id             String   @id @default(cuid())
  name           String
  color          String   // Hex color code (e.g., #FF5733)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  items          ItemLabel[] // Many-to-many relation with items

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organizationId, name]) // Unique name per organization
}

model ItemLabel {
  id      String @id @default(cuid())
  itemId  String
  labelId String
  item    Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  label   Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([itemId, labelId]) // Prevent duplicate label assignments
}

model Item {
  id               String      @id @default(cuid())
  name             String
  description      String?
  price            Float
  cost             Float?
  quantity         Float       @default(0)
  unit             Unit        @default(PCS)
  folderId         String
  folder           Folder      @relation(fields: [folderId], references: [id])
  photos           Photo[]
  labels           ItemLabel[] // Many-to-many relation with labels
  hashId           String      // Hash of name + sorted label names for uniqueness

  lastModifiedById String
  lastModifiedBy   User        @relation("ItemLastModifiedBy", fields: [lastModifiedById], references: [id])

  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@unique([folderId, hashId]) // Unique hash per folder to ensure item uniqueness within folder
}

model Photo {
  id        String   @id @default(cuid())
  url       String
  itemId    String?  // Photo belongs either to an item
  folderId  String?  // or to a folder
  item      Item?    @relation(fields: [itemId], references: [id])
  folder    Folder?  @relation(fields: [folderId], references: [id])
  createdAt DateTime @default(now())
}
